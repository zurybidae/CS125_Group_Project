        printf("   |      \n");
        printf("   |      \n");
        printf("___|_____ \n");
    }
    else if(x==2)
    {
        printf("    _ _   \n");
        printf("   |   |  \n");    
        printf("   |   0  \n");
        printf("   |   |  \n");
        printf("   |      \n");
        printf("___|_____ \n");
    }
    else if(x==3)
    {
        printf("    _ _   \n");
        printf("   |   |  \n");    
        printf("   |   0  \n");
        printf("   |  /|  \n");
        printf("   |      \n");
