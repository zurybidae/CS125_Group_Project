void print(char word2[])
{
    for (i=0; i<length; i++)
		{
			if (guess==word[i])
			{
				
				word2[i]=guess;
				safe++;
			}
			
		}

    for(i=0;i<length;i++)
    {
        if (word2[i]==' ')
        {
            printf(" _ ");
        }
        else
        {
            printf(" %c ", word2[i]);
        }
    }
}



int main()
{
    length=strlen(word);
    int *size = &length;
    char word2[*size];
	
			for (i=0; i<length; i++)
			{
				printf(" _ ");
			}
	do
	{
		do
		{
			
			printf("\n\nGuess the letter:\n");
			scanf(" %c", &guess);
			
			if (isdigit(guess))
			{
				input=1;
				printf("that is not a letter. Try Again.\n");
			}
			else
			{
				input=0;
			}

		} while(input==1);
        
        if(safe==0)
        {
            wrong_guess++;
            safe=0;
        }
		guy_printer(wrong_guess);
		
		print(word2);//---------------------------------------------------------------
	}while(strcmp(word,word2)!=0);
	
	printf("\nSuccess!you guessed the word\n");


	return 0;
}

